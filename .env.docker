# Docker Compose Environment Configuration
# Copy this to .env and fill in your values
# 
# Usage: docker-compose --env-file .env up

# =============================================================================
# Anthropic API Configuration (REQUIRED)
# =============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude Model Settings
MODEL_NAME=claude-3-5-sonnet-20241022
MAX_TOKENS=4096
TEMPERATURE=0.0

# =============================================================================
# IDOR Detection Settings
# =============================================================================
IDOR_THRESHOLD=3           # Minimum distinct resources for alert
IDOR_TIME_WINDOW=60        # Time window in seconds
IDOR_REDIS_TTL=300         # Redis TTL for tracking data

# =============================================================================
# Chronicle Integration (Demo Mode - Using Mock Server)
# =============================================================================
CHRONICLE_REGION=us
CHRONICLE_CONTEXT_ENRICHMENT=true
CHRONICLE_SOAR_INTEGRATION=true
CHRONICLE_UDM_ANNOTATIONS=true
CHRONICLE_WEBHOOK_SECRET=demo_webhook_secret

# =============================================================================
# PII Scrubbing Policy
# =============================================================================
SCRUB_PII_FOR_SOAR=false        # Chronicle is internal, full context helpful
SCRUB_PII_FOR_CHRONICLE=false   # Internal Chronicle instance

# =============================================================================
# SOAR Integration (Optional)
# =============================================================================
# SOAR_WEBHOOK_URL=https://your-soar.company.com/webhook
# SOAR_PLATFORM=splunk  # generic, splunk, xsoar, resilient, servicenow, chronicle
# SOAR_API_KEY=your_soar_api_key

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info  # debug, info, warning, error, critical
