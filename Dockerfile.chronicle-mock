# Dockerfile for Chronicle Mock API Server
#
# Build: docker build -f Dockerfile.chronicle-mock -t chronicle-mock:latest .

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies for health check
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir fastapi uvicorn httpx

# Copy mock server files
COPY tests/fixtures/chronicle_mock_data.py .
COPY tests/fixtures/chronicle_mock_server.py .

# Create non-root user
RUN useradd -m -u 1000 appuser && \
    chown -R appuser:appuser /app

USER appuser

EXPOSE 8001

# Health check
HEALTHCHECK --interval=15s --timeout=5s --start-period=20s --retries=3 \
    CMD curl -f http://localhost:8001/ || exit 1

CMD ["python", "chronicle_mock_server.py"]
