# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
MODEL_NAME=claude-3-5-sonnet-20241022
MAX_TOKENS=4096
TEMPERATURE=0.0

# Security
API_SECRET_KEY=your_secret_key_here

# Optional: Logging
LOG_LEVEL=INFO

# PII Scrubbing for SOAR Integration
# Set to "true" to redact PII (emails, IPs) from SOAR alerts
# Set to "false" if SOAR is internal and requires full context
SCRUB_PII_FOR_SOAR=false

# Google Chronicle Integration
# =============================
# Chronicle API Credentials
CHRONICLE_CREDENTIALS_FILE=/path/to/chronicle-service-account.json
CHRONICLE_CUSTOMER_ID=your_chronicle_customer_id
CHRONICLE_REGION=us  # us, europe, asia

# Chronicle Webhook Security
CHRONICLE_WEBHOOK_SECRET=your_webhook_verification_secret

# Chronicle Feature Flags
CHRONICLE_CONTEXT_ENRICHMENT=true   # Query Chronicle for prevalence/baselines during triage
CHRONICLE_SOAR_INTEGRATION=true     # Send triage results to Chronicle Cases
CHRONICLE_UDM_ANNOTATIONS=true      # Annotate original UDM events with AI reasoning

# Chronicle PII Scrubbing
# Set to "true" to redact PII from Chronicle case data
# Set to "false" for internal Chronicle (full context for analysts)
# Note: UDM annotations are ALWAYS scrubbed (non-configurable, compliance)
SCRUB_PII_FOR_CHRONICLE=false
